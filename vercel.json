{
    "version": 2,
    "builds": [
      { "src": "api/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/", "dest": "/public/index.html" },
      { "src": "/message", "dest": "/public/leave_note.html" },
      { "src": "/submit.html", "dest": "/public/submit.html" }
    ]
  }
      